<%= form_for @stack do |f| %>

  <%= f.label :name %><br />
  <%= f.text_field :name, placeholder: "e.g. Ruby"%>

  <br />

  <%= f.label :description %><br />
  <%= f.text_area(:description, placeholder: "description", :cols => 31, :rows => 4) %>

  <div class="new_card_headline">
    <h2 class="title_pad"> Current Cards:</h2> 
      <%= f.fields_for :cards do |card| %>
        <%= render 'card_fields', :f => card %>
      <% end %>

    <div class="links">
      <%= link_to_add_association 'add a new card', f, :cards %>
    </div>
      
  </div>

  <%= f.submit %>


<% end %>